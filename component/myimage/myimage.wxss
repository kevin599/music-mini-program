/* component/myimage/myimage.wxss */
@import"/iconfonts/iconfont.wxss";

.content {
  display: flex;
  width: 100%;
}

.content-left {
  width: 45%;
  margin: 0 0 20rpx 24rpx;
  background-color: #fefefe;
  border-radius: 5%;
}

image {
  width: 100%;
  height: 420rpx;
  border-radius: 5% 5% 0 0;
}

.title {
  overflow: hidden;
  width: 100%;
  height: 30rpx;
  font-size: 24rpx;
  padding-left: 10rpx;
}

.heat {
  width: 100%;
  display: flex;
  margin: 10rpx 0;
}

.gl-play,
.Like-it,
.type {
  overflow: hidden;
  display: flex;
  width: 33.3%;
  height: 30rpx;
  font-size: 24rpx;
}