page{
  background-color: #FAFAFA;
}
.top_list{
  width: 100%;
  display: flex;  
  justify-content: space-around;
}
.top_list .myblog{
  width: 12%;
  display: flex;
  flex-wrap: wrap;

}
.top_list .myblog image{
  width: 65%;
  height: 65rpx;
  margin: 0 auto;
  padding: 20% 0;
}
.top_list .myblog text{
  display: block;
  margin: 0 auto;
  font-size: 20rpx;
}
.recommend{
  margin: 8% 0;
  position: relative;

}
.recommend text{
  position: absolute;
}
.recommend .text1{
  left: 50rpx;
  font-weight: 700;
  font-size: 30rpx;
}
.recommend .text2{
  right: 50rpx;
}
.electric_sound{
  display: flex;
  justify-content: space-around;  
  flex-wrap:wrap;  
  margin-top: 18%;
}
.electric_sound .music_list{
  width: 30%;
}
.electric_sound .music_list image{
  width: 100%;
  height: 230rpx;
  border-radius: 10%;
}
.electric_sound .music_list text{
  display: block;
  padding-left: 15rpx;
  font-size: 24rpx;
}
