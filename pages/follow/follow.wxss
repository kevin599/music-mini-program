  display: flex;
  justify-content: space-around;
  margin: 10rpx 60rpx;
  height: 50rpx;
}

.content .dzpl image{
  width: 24rpx;
  height: 24rpx;
  margin-right: 10rpx;
  margin-top: 10rpx;
}
.content .dzpl text{
  font-size: 28rpx;
}
